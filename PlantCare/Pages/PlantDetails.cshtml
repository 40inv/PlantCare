@page "{id}"
@using PlantCare.Models
@model PlantCare.Pages.PlantDetailsModel
@{
    ViewData["Title"] = $"Plant details - {Model.Plant.CommonName}";
}

<style>
    .plant-image {
        height: 50vh;
    }
</style>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-xl">Plant Details</h1>
                <div>
                    <strong>Plant Name:</strong> @(string.IsNullOrEmpty(Model.Plant.CommonName) ? "No Information" : Model.Plant.CommonName)
                </div>
                <div>
                    <strong>Scientific Name:</strong> @(string.IsNullOrEmpty(Model.Plant.ScientificName) ? "No Information" : Model.Plant.ScientificName)
                </div>
                <div>
                    <strong>Family:</strong> @(string.IsNullOrEmpty(Model.Plant.FamilyCommonName) ? "No Information" : Model.Plant.FamilyCommonName)
                </div>
                <div>
                    <strong>Observations:</strong> @(string.IsNullOrEmpty(Model.Plant.Observations) ? "No Information" : Model.Plant.Observations)
                </div>
                <div>
                    <strong>Year:</strong> @(Model.Plant.Year == 0 ? "No Information" : Model.Plant.Year.ToString())
                </div>
                <div>
                    <strong>Bibliography:</strong> @(string.IsNullOrEmpty(Model.Plant.Bibliography) ? "No Information" : Model.Plant.Bibliography)
                </div>
                <div>
                    <strong>Author:</strong> @(string.IsNullOrEmpty(Model.Plant.Author) ? "No Information" : Model.Plant.Author)
                </div>
            </div>
            <div class="col-md-6">
                @if (Model.Images.Any())
                {
                    <div id="plantCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Images.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Model.Images[i].ImageUrl" class="d-block w-100 plant-image" alt="Image @(i + 1)">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#plantCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#plantCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
